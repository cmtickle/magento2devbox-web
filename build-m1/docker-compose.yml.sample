##
# Services needed to run Magento2 application on Docker
#
# Docker Compose defines required services and attach them together through aliases
##
version: '2'
services:
    web:
        container_name: magento2devbox_web_d5983e9313d9639b0b41d7e6b67443f8
        restart: always
        build : ../
        volumes:
          - "/Users/foo/Magento1Directory:/home/magento2/magento2" # THIS NEEDS TO BE EDITED TO CORRECT LOCAL PATH
          - "~/.composer:/home/magento2/.composer"
          - "~/.ssh:/home/magento2/.ssh"
          - "./shared/logs/apache2:/var/log/apache2"
          - "./shared/logs/php-fpm:/var/log/php-fpm"
          - "./shared/.magento-cloud:/home/magento2/.magento-cloud"
        environment:
          - USE_SHARED_WEBROOT=0
          - SHARED_CODE_PATH="/home/magento2/magento2"
          - USE_RABBITMQ=0
          - USE_REDIS_FULL_PAGE_CACHE=1
          - USE_REDIS_CACHE=1
          - USE_REDIS_SESSIONS=1
          - USE_VARNISH=0
          - USE_ELASTICSEARCH=0
          - MAGENTO_PUBLIC_KEY=
          - MAGENTO_PRIVATE_KEY=
          - MAGENTO_USE_SOURCES_IN_HOST=1
          - CREATE_SYMLINK_EE=0
          - HOST_CE_PATH=/Users/colintickle/Development/RibbleCycles
          - EE_DIRNAME=magento2ee
          - MAGENTO_DOWNLOAD_SOURCES_COMPOSER=0
          - MAGENTO_EDITION=
          - MAGENTO_VERSION=2.1.5
          - MAGENTO_SAMPLE_DATA_INSTALL=0
          - MAGENTO_DOWNLOAD_SOURCES_CLOUD=0
          - MCLOUD_USERNAME=
          - MCLOUD_PASSWORD=
          - MCLOUD_GENERATE_NEW_TOKEN=
          - MCLOUD_PROJECT=
          - MCLOUD_BRANCH=
          - MAGENTO_CRON_RUN=0
          - MAGENTO_DI_COMPILE=0
          - MAGENTO_GRUNT_COMPILE=0
          - MAGENTO_STATIC_CONTENTS_DEPLOY=0
          - MAGENTO_BACKEND_PATH=admin
          - MAGENTO_ADMIN_USER=admin
          - MAGENTO_ADMIN_PASSWORD=admin123
        ports:
          - "80"
          - "22"

    db:
        container_name: magento2devbox_db_d5983e9313d9639b0b41d7e6b67443f8
        restart: always
        image: percona:5.6
        ports:
          - "3306:3306"
        environment:
          - MYSQL_ROOT_PASSWORD=root
          - MYSQL_DATABASE=magento1
        volumes:
          - "./shared/db:/var/lib/mysql"
          - "./shared/var/logs/mysql:/var/log/mysql"

    redis:
        container_name: magento2devbox_redis_d5983e9313d9639b0b41d7e6b67443f8
        restart: always
        image: redis:3.0.7

